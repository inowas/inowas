{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "id": "https://inowas.com/schema/",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "start": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
        },
        "end": {
            "type": "string"
        },
        "time_unit": {
            "description": "0: undefined, 1: seconds, 2: minutes, 3: hours, 4: days, 5: years",
            "enum": [0, 1, 2, 3, 4, 5]
        }
    },
    "required": [
        "id",
        "start",
        "end",
        "time_unit"
    ]
}
