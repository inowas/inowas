<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ModflowBundle\Model\Boundary\Boundary" table="mf_boundaries" inheritance-type="SINGLE_TABLE">

        <indexes>
            <index name="idx_boundaries_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_boundaries_id"/>
        </unique-constraints>

        <discriminator-column name="discr" type="string" />
        <discriminator-map>
            <discriminator-mapping value="CHB" class="Inowas\ModflowBundle\Model\Boundary\ConstantHeadBoundary" />
            <discriminator-mapping value="GHB" class="Inowas\ModflowBundle\Model\Boundary\GeneralHeadBoundary" />
            <discriminator-mapping value="RCH" class="Inowas\ModflowBundle\Model\Boundary\RechargeBoundary" />
            <discriminator-mapping value="RIV" class="Inowas\ModflowBundle\Model\Boundary\RiverBoundary" />
            <discriminator-mapping value="WEL" class="Inowas\ModflowBundle\Model\Boundary\WellBoundary" />
        </discriminator-map>

        <many-to-many field="observationPoints" target-entity="Inowas\ModflowBundle\Model\Boundary\ObservationPoint" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="mf_boundaries_observationpoints">
                <join-columns>
                    <join-column name="boundary_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="observationpoint_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
