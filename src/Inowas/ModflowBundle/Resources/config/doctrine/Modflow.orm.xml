<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ModflowBundle\Model\Modflow" table="mf_modflow">

        <indexes>
            <index name="idx_modflow_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_modflow_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>

        <one-to-one field="modflowModel" target-entity="Inowas\ModflowBundle\Model\ModflowModel" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="model_id" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

        <field name="userId" column="user_id" type="uuid" />
        <field name="public" column="public" type="boolean" />
    </entity>
</doctrine-mapping>
