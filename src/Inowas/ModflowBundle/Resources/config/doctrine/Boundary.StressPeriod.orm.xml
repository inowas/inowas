<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ModflowBundle\Model\Boundary\StressPeriod" table="mf_stressperiods" inheritance-type="SINGLE_TABLE">

        <indexes>
            <index name="idx_stressperiods_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_stressperiods_id"/>
        </unique-constraints>

        <discriminator-column name="discr" type="string" />
        <discriminator-map>
            <discriminator-mapping value="stp" class="Inowas\ModflowBundle\Model\Boundary\StressPeriod" />
            <discriminator-mapping value="CHD" class="Inowas\ModflowBundle\Model\Boundary\ChdStressPeriod" />
            <discriminator-mapping value="GHB" class="Inowas\ModflowBundle\Model\Boundary\GhbStressPeriod" />
            <discriminator-mapping value="RCH" class="Inowas\ModflowBundle\Model\Boundary\RchStressPeriod" />
            <discriminator-mapping value="RIV" class="Inowas\ModflowBundle\Model\Boundary\RivStressPeriod" />
            <discriminator-mapping value="WEL" class="Inowas\ModflowBundle\Model\Boundary\WelStressPeriod" />
        </discriminator-map>

        <id name="id" type="uuid" column="id"/>
        <field name="dateTimeBegin" type="datetime" column="begin"/>
        <field name="dateTimeEnd" type="datetime" column="end"/>
        <field name="numberOfTimeSteps" type="integer" column="number_of_timesteps"/>
        <field name="steady" type="boolean" column="steady"/>
        <field name="timeStepMultiplier" type="float" column="timestep_multiplier"/>

    </entity>
</doctrine-mapping>
