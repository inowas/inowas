<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ModflowBundle\Model\Boundary\ObservationPoint" table="mf_observationpoints">

        <indexes>
            <index name="idx_observationpoints_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_observationpoints_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>
        <field name="name" type="string" column="name" nullable="true"/>
        <field name="description" type="string" column="description" nullable="true"/>
        <field name="geometry" column="geometry" type="point" nullable="true"/>

        <many-to-many field="stressPeriods" target-entity="Inowas\ModflowBundle\Model\Boundary\StressPeriod" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="mf_observationpoints_stressperiods">
                <join-columns>
                    <join-column name="observationpoint_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="stressperiod_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
