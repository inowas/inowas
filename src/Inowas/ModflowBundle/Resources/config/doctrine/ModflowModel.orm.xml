<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ModflowBundle\Model\ModflowModel" table="mf_modflowmodels">

        <indexes>
            <index name="idx_modflowmodels_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_modflowmodels_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>
        <field name="name" column="name" type="string" length="255" nullable="true" />
        <field name="description" column="description" type="string" length="255" nullable="true" />
        <field name="gridSize" type="grid_size" column="grid_size" nullable="true"/>
        <field name="boundingBox" type="bounding_box" column="bounding_box" nullable="true"/>
        <field name="start" type="datetime" column="`start`" nullable="false"/>
        <field name="end" type="datetime" column="`end`" nullable="false"/>
        <field name="timeUnit" type="time_unit" column="timeunit" nullable="false"/>

        <one-to-one field="area" target-entity="Inowas\ModflowBundle\Model\Area" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="area_id" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

        <field name="soilmodelId" column="soilmodel_id" type="uuid" nullable="true"/>

        <many-to-many field="boundaries" target-entity="Inowas\ModflowBundle\Model\Boundary\Boundary" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="mf_modflowmodels_boundaries">
                <join-columns>
                    <join-column name="modflowmodel_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="boundary_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
