<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\SoilmodelBundle\Model\Soilmodel" table="soilmodels">

        <indexes>
            <index name="idx_soilmodels_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_soilmodels_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>
        <field name="name" column="name" type="string" length="255" nullable="true" />
        <field name="gridSize" type="grid_size" column="grid_size" nullable="true"/>
        <field name="boundingBox" type="bounding_box" column="bounding_box" nullable="true"/>

        <many-to-many field="layers" target-entity="Inowas\SoilmodelBundle\Model\Layer" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="sm_soilmodel_layers">
                <join-columns>
                    <join-column name="soilmodel_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="layer_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="boreholes" target-entity="Inowas\SoilmodelBundle\Model\BoreHole" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="sm_soilmodel_boreholes">
                <join-columns>
                    <join-column name="soilmodel_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="borehole_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
