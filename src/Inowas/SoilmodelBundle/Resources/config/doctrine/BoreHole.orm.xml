<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\SoilmodelBundle\Model\BoreHole" table="boreholes">

        <indexes>
            <index name="idx_borehole_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_borehole_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>

        <field name="point" type="point" column="geometry" nullable="true"/>
        <field name="name" column="name" type="string" nullable="true"/>
        <field name="description" column="description" type="string" nullable="true"/>

        <many-to-many field="layers" target-entity="Inowas\SoilmodelBundle\Model\Layer">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="borehole_layers">
                <join-columns>
                    <join-column name="borehole_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="layer_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>