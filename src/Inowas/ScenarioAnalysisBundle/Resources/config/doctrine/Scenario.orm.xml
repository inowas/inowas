<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ScenarioAnalysisBundle\Model\Scenario" table="sca_scenarios">

        <indexes>
            <index name="idx_scenarios_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_scenarios_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>
        <field name="name" column="name" type="string" length="255" nullable="true" />
        <field name="description" column="description" type="string" length="255" nullable="true" />
        <field name="order" type="integer" column="order" nullable="true"/>

        <one-to-one field="baseModel" target-entity="Inowas\ModflowBundle\Model\ModflowModel">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="base_model" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

        <many-to-many field="events" target-entity="Inowas\ScenarioAnalysisBundle\Model\Event" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="mf_scenarios_events">
                <join-columns>
                    <join-column name="scenario_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="event_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
