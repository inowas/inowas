<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ScenarioAnalysisBundle\Model\Event" table="sca_events" inheritance-type="SINGLE_TABLE">

        <indexes>
            <index name="idx_events_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_events_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>

        <discriminator-column name="discr" type="string" />
        <discriminator-map>
            <discriminator-mapping value="ADD_WELL" class="Inowas\ScenarioAnalysisBundle\Model\Events\AddWellEvent"/>
            <discriminator-mapping value="CHANGE_WELL_LAYER_NUMBER" class="Inowas\ScenarioAnalysisBundle\Model\Events\ChangeWellLayerNumberEvent"/>
            <discriminator-mapping value="CHANGE_WELL_NAME" class="Inowas\ScenarioAnalysisBundle\Model\Events\ChangeWellNameEvent"/>
            <discriminator-mapping value="CHANGE_WELL_STRESSPERIODS" class="Inowas\ScenarioAnalysisBundle\Model\Events\ChangeWellStressperiodsEvent"/>
            <discriminator-mapping value="CHANGE_WELL_TYPE" class="Inowas\ScenarioAnalysisBundle\Model\Events\ChangeWellTypeEvent"/>
            <discriminator-mapping value="MOVE_WELL" class="Inowas\ScenarioAnalysisBundle\Model\Events\MoveWellEvent"/>
            <discriminator-mapping value="REMOVE_WELL" class="Inowas\ScenarioAnalysisBundle\Model\Events\RemoveWellEvent"/>
        </discriminator-map>

        <field name="type" column="name" type="string" length="255" nullable="false" />
        <field name="order" type="integer" column="order" nullable="false"/>
        <field name="payload" type="text" column="payload" nullable="false"/>

    </entity>
</doctrine-mapping>
