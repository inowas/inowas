<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Inowas\ScenarioAnalysisBundle\Model\ScenarioAnalysis" table="sca_scenarioanalysis">

        <indexes>
            <index name="idx_scenarioanalysis_id" columns="id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="id" name="uc_scenarioanalysis_id"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"/>
        <field name="userId" column="user_id" type="uuid" />

        <many-to-many field="scenarios" target-entity="Inowas\ScenarioAnalysisBundle\Model\Scenario">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="mf_scenarioanalysis_scenarios">
                <join-columns>
                    <join-column name="scenarioanalysis_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="scenario_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
