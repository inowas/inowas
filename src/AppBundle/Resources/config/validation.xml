<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="
        http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd
    ">

    <class name="AppBundle\Entity\AbstractModel">
        <property name="name">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>flopyMf</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="AppBundle\Entity\ModFlowModel">
        <getter property="numberOfLayers">
            <constraint name="GreaterThan">
                <option name="value">0</option>
                <option name="groups">
                    <value>flopyDis</value>
                </option>
            </constraint>
        </getter>
        <getter property="numberOfRows">
            <constraint name="GreaterThan">
                <option name="value">0</option>
                <option name="groups">
                    <value>flopyDis</value>
                </option>
            </constraint>
        </getter>
        <getter property="numberOfColumns">
            <constraint name="GreaterThan">
                <option name="value">0</option>
                <option name="groups">
                    <value>flopyDis</value>
                </option>
            </constraint>
        </getter>
        <getter property="numberOfStressPeriods">
            <constraint name="GreaterThan">
                <option name="value">0</option>
                <option name="groups">
                    <value>flopyDis</value>
                </option>
            </constraint>
        </getter>
        <getter property="sortedLayers">
            <constraint name="NotNull">
                <option name="groups">
                    <value>flopyDis</value>
                </option>
            </constraint>
        </getter>
    </class>
</constraint-mapping>