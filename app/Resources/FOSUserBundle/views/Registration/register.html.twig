{% trans_default_domain 'kruemel' %}
{% extends "base.html.twig" %}

{% block body %}
    {{ include('kruemel/navbar/navbar.html.twig') }}
    {{ parent() }}
{% endblock body %}

{% block fos_user_content %}
    <div class="container">
        <div class="container-fluid">
            <section class="container">
                <div class="container-page">
                    <div class="col-md-12">
                        <h2 class="dark-grey col-lg-12">{{ 'registration.register'|trans }}</h2>
                    </div>

                    <form action="{{ path('fos_user_registration_register') }}" method="POST" class="fos_user_registration_register">
                        <div class="col-md-6">
                            <div class="form-group col-lg-12">
                                {{ form_label(form.registerAs) }}
                                {{ form_widget(form.registerAs, {'attr': {'class': 'form-control' }}) }}
                                {{ form_errors(form.registerAs) }}
                            </div>

                            <div class="form-group col-lg-12">
                                {{ form_label(form.username) }}
                                {{ form_widget(form.username, {'attr': {'class': 'form-control' }}) }}
                                {{ form_errors(form.username) }}
                            </div>

                            <div class="form-group col-lg-12">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control' }}) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="form-group col-lg-6">
                                {{ form_label(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' }}) }}
                                {{ form_errors(form.plainPassword.first) }}
                            </div>

                            <div class="form-group col-lg-6">
                                {{ form_label(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' }}) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h3 class="dark-grey">{{ 'registration.headline_terms_conditions'|trans }}</h3>
                            {{ 'registration.text_terms_conditions'|trans|raw }}

                            <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />

                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </div>
                    </form>
                </div>
            </section>
        </div>
{% endblock fos_user_content %}
