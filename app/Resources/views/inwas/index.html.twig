{% extends 'base.html.twig' %}

{% block title %}
    Welcome to InWas!
{% endblock title %}

{% block body %}
    <div class="contain-to-grid sticky">
        <nav class="top-bar" data-topbar role="navigation">

            <ul class="title-area">
                <li class="name">
                    <h1><a href="#"></a></h1>
                </li>
                <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
                <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
            </ul>

            <section class="top-bar-section">

                <!-- Right Nav Section -->
                <ul class="right">
                    <li class="has-form">
                        <input type="text" placeholder="Search">
                    </li>
                </ul>

                <!-- Left Nav Section -->
                <ul class="left">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">My Projects</a></li>
                    <li class="has-dropdown">
                        <a href="#">Applications</a>
                        <ul class="dropdown">
                            <li><a href="#">First link in dropdown</a></li>
                            <li><a href="#">Active link in dropdown</a></li>
                        </ul>
                    </li>
                    <li><a href="#">Knowledge Bar</a></li>
                    <li><a href="#">About Us</a></li>
                </ul>
            </section>
        </nav>
    </div>

    <section id="main-content" class="example">
        <div class="row">
            <div class="medium-9 columns">
                <div id="map">MapDiv</div>
            </div>
            <div class="medium-3 columns">

            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('vendor/foundation/css/foundation.css') }}">

    <!-- This is the link to the custom stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendor/foundation/js/vendor/modernizr.js') }}"></script>
    <script src="{{ asset('vendor/foundation/js/vendor/jquery.js') }}"></script>
    <script src="{{ asset('vendor/foundation/js/foundation.js') }}"></script>
    <script>
        $(document).foundation();
    </script>
{% endblock %}
